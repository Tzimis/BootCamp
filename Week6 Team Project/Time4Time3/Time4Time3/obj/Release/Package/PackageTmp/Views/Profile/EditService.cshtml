@model Time4Time3.Models.ProfileServiceEditModel


@using (Html.BeginForm(null, null, FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class= "container">
        <h2>@ViewBag.Title</h2>
        <hr />
        <div class="form-horizontal">

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(Model => Model.Id)

            <div class="form-group">
                @Html.LabelFor(Model => Model.Title, htmlAttributes: new { @class = "control-label col-sm-2 col-sm-offset-2" })
                <div class="col-sm-8">
                    @Html.EditorFor(Model => Model.Title, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => Model.Title, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(Model => Model.Description, htmlAttributes: new { @class = "control-label col-sm-2 col-sm-offset-2" })
                <div class="col-sm-8">
                    @Html.TextAreaFor(Model => Model.Description, 6, 80, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(Model => Model.Description, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(Model => Model.CreditWorth, htmlAttributes: new { @class = "control-label col-sm-2 col-sm-offset-2" })
                <div class="col-sm-8">
                    @Html.EditorFor(model => Model.CreditWorth, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(Model => Model.CreditWorth, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(Model => Model.Location, htmlAttributes: new { @class = "control-label col-sm-2 col-sm-offset-2" })
                <div class="col-sm-8">
                    @Html.EditorFor(Model => Model.Location, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(Model => Model.Location, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(Model => Model.IsActive, htmlAttributes: new { @class = "control-label col-sm-2 col-sm-offset-2 " })
                <div class="col-md-8">
                    @Html.DropDownListFor(Model => Model.IsActive, Model.ViewStatuses, new { htmlAttributes = new { @class = "form-control dropdown" } })
                    @Html.ValidationMessageFor(Model => Model.IsActive, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(Model => Model.ImagePath, htmlAttributes: new { @class = "control-label col-sm-2 col-sm-offset-2" })
                <div class="col-md-8">
                    <input type="file" class="form-control" name="ImagePath" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-4 col-md-8">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </div>
            <div>
                <span class="glyphicon glyphicon-arrow-left">&nbsp;@Html.ActionLink("Back to Profile", "Index")</span>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
